                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Content="TEAM 1"/>

                <ComboBox Grid.Column="0"
                          Height="20"
                          VerticalAlignment="Center"
                          SelectionChanged="OnTeamSelectionChanged"
                          Tag="0"
                          SelectedValue="{Binding SelectedTeam0, Mode=TwoWay}"
                          ItemsSource="{Binding TeamSource}">

                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>

