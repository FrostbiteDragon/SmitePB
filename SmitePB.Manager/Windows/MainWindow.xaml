                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="71*"/>
                <RowDefinition Height="287*"/>
            </Grid.RowDefinitions>


            <Label Grid.Column="0"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Content="TEAM 1"/>

            <ComboBox Grid.Column="0"
                      Height="20"
                      VerticalAlignment="Center"
                      SelectionChanged="OnTeamSelectionChanged"
                      Tag="0"
                      SelectedValue="{Binding SelectedTeam0, Mode=TwoWay}"
                      ItemsSource="{Binding TeamSource}">

                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>

            <Label Grid.Column="1"
                   Foreground="White"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   FontSize="20"
                   Content="0"/>

            <Button Grid.Column="2" Click="SwapTeamSides">
                <Button.Template>
                    <ControlTemplate>
                        <Label FontFamily="{StaticResource IcoFont}" 
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="30"
                               Content="&#xef18;"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Label Grid.Column="3"
                   Foreground="White"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   FontSize="20"
                   Content="0"/>

            <Label Grid.Column="4"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Content="TEAM 2">

            </Label>

            <ComboBox Grid.Column="4"
                      Height="20"
                      VerticalAlignment="Center"
                      SelectionChanged="OnTeamSelectionChanged"
                      Tag="1"
                      SelectedValue="{Binding SelectedTeam1, Mode=TwoWay}"
                      ItemsSource="{Binding TeamSource}">

                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>

