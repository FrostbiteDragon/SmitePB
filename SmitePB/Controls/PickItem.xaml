<UserControl x:Class="SmitePB.Manager.Controls.PickItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmitePB.Manager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Name="background" Grid.Column="1" Grid.Row="2" Margin="5" Fill="{Binding FillColourBrush}" />
        <!--<Image Grid.Column="1" Grid.Row="2" Margin="5" Stretch="Fill" Source="{ Binding , Mode=TwoWay}" />-->
        <Rectangle Grid.Column="1" Grid.Row="2" Margin="5" Fill="Black" Opacity=".60" Visibility="Visible"/>
    </Grid>
</UserControl>
