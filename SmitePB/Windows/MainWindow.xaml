<Window x:Class="SmitePB.Manager.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStyle="None"
        AllowsTransparency="True"
        mc:Ignorable="d"
        MouseDown="WindowMouseDown"
        Title="MainWindow" Height="450" Width="800">

    <Window.Background>
        <SolidColorBrush Color="#1e1e1e" Opacity=".9"/>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10"/>

        </Grid.RowDefinitions>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width=".1*"/>
            </Grid.ColumnDefinitions>

            <Label FontSize="8"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Content="Display Scale:"/>

            <Slider Grid.Column="1"
                    
                    ValueChanged="OnDisplayScaleChanged"
                    IsDirectionReversed="False"
                    Maximum="1"
                    Minimum="0"
                    Value="1"
                />

            <Button Grid.Column="2" 
                    Margin="3"
                    Content="snap"
                    FontSize="7"
                    Click="SnapDisplayToTopLeft"/>

        </Grid>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height=".3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!--teams-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width=".3*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width=".3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Content="TEAM 1"/>

                <ComboBox Grid.Column="0"
                          Height="20"
                          VerticalAlignment="Bottom"
                          SelectionChanged="OnTeamSelectionChanged"
                          Tag="0"
                          SelectedValue="{Binding SelectedTeam0, Mode=TwoWay}"
                          ItemsSource="{Binding TeamSource}">

                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>

                <TextBox x:Name="Team0WinDisplay"
                         Grid.Column="1"
                         Foreground="White"
                         VerticalAlignment="Bottom"
                         FontWeight="Bold"
                         FontSize="20"
                         Background="Black"
                         BorderThickness="0"
                         Tag="0"
                         TextChanged="OnWinCountChanged"
                         Text="0"/>


                <Button Grid.Column="2" Click="SwapTeamSides">
                    <Button.Template>
                        <ControlTemplate>
                            <Label FontFamily="{StaticResource IcoFont}" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="30"
                                   Content="&#xef18;"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <TextBox x:Name="Team1WinDisplay"
                         Grid.Column="3"
                         Foreground="White"
                         VerticalAlignment="Bottom"
                         FontWeight="Bold"
                         FontSize="20"
                         Background="Black"
                         BorderThickness="0"
                         Tag="1"
                         TextChanged="OnWinCountChanged"
                         Text="0"/>



                <Label Grid.Column="4"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Content="TEAM 2">

                </Label>

                <ComboBox Grid.Column="4"
                          Height="20"
                          VerticalAlignment="Bottom"
                          SelectionChanged="OnTeamSelectionChanged"
                          Tag="1"
                          SelectedValue="{Binding SelectedTeam1, Mode=TwoWay}"
                          ItemsSource="{Binding TeamSource}">

                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>
            </Grid>
            
            <!--Player names-->
            <Grid Grid.Row="1" Margin="0 5 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width=".5*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Separator Grid.ColumnSpan="10"
                           VerticalAlignment="Top"
                           Foreground="White"/>

                <TextBox Grid.Row="0" Height="20" Tag="0" TextChanged="OnPlayerNameChanged" Text="{Binding Players[0]}"/>
                <TextBox Grid.Row="1" Height="20" Tag="1" TextChanged="OnPlayerNameChanged" Text="{Binding Players[1]}"/>
                <TextBox Grid.Row="2" Height="20" Tag="2" TextChanged="OnPlayerNameChanged" Text="{Binding Players[2]}"/>
                <TextBox Grid.Row="3" Height="20" Tag="3" TextChanged="OnPlayerNameChanged" Text="{Binding Players[3]}"/>
                <TextBox Grid.Row="4" Height="20" Tag="4" TextChanged="OnPlayerNameChanged" Text="{Binding Players[4]}"/>

                <TextBox Grid.Column="2" Grid.Row="0" Height="20" Tag="5" TextChanged="OnPlayerNameChanged" Text="{Binding Players[5]}"/>
                <TextBox Grid.Column="2" Grid.Row="1" Height="20" Tag="6" TextChanged="OnPlayerNameChanged" Text="{Binding Players[6]}"/>
                <TextBox Grid.Column="2" Grid.Row="2" Height="20" Tag="7" TextChanged="OnPlayerNameChanged" Text="{Binding Players[7]}"/>
                <TextBox Grid.Column="2" Grid.Row="3" Height="20" Tag="8" TextChanged="OnPlayerNameChanged" Text="{Binding Players[8]}"/>
                <TextBox Grid.Column="2" Grid.Row="4" Height="20" Tag="9" TextChanged="OnPlayerNameChanged" Text="{Binding Players[9]}"/>
                

                <!--Role Names-->
                <Label Grid.Column="1"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       FontWeight="Bold"
                       Foreground="White"
                       FontSize="12"
                       Content="SOLO"/>
                <Label Grid.Column="1"
                       Grid.Row="1"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       FontWeight="Bold"
                       Foreground="White"
                       FontSize="12"
                       Content="JUNGLE"/>
                <Label Grid.Column="1"
                       Grid.Row="2"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       FontWeight="Bold"
                       Foreground="White"
                       FontSize="12"
                       Content="MID"/>
                <Label Grid.Column="1"
                       Grid.Row="3"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       FontWeight="Bold"
                       Foreground="White"
                       FontSize="12"
                       Content="SUPPORT"/>
                <Label Grid.Column="1"
                       Grid.Row="4"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       FontWeight="Bold"
                       Foreground="White"
                       FontSize="12"
                       Content="CARRY"/>

            </Grid>

            <!--Save-->
            <Grid Grid.Row="2" Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="1"
                        Tag="0"
                        Margin="5"
                        Click="OnTeamWon"
                        Content="Team 1 win"/>

                <CheckBox Grid.Column="1"
                          Grid.Row="1"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Margin="0 0 10 0"
                          Checked="OnSaveGameResultChecked"
                          Unchecked="OnSaveGameResultUnchecked"/>
                
                <Label Grid.Column="1"
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="11"
                       Content="save game results:"/>

                <Button Grid.Column="2"
                        Grid.Row="1"
                        Tag="1"
                        Margin="5"
                        Click="OnTeamWon"
                        Content="Team 2 win"/>

            </Grid>
        </Grid>

