                <Button Grid.Column="1" Grid.Row="1" Click="OnLockedIn" Tag="0">
                    <Button.Template>
                        <ControlTemplate>
                            <Label HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontFamily="{StaticResource IcoFont}"
                                   Foreground="White">
                                <Label.Style>
                                    <Style TargetType="{x:Type Label}">
                                        <Setter Property="Label.Content" Value="&#xf01b;" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LockedIn[0]}" Value="True">
                                                <Setter Property="Label.Content" Value="&#xf01a;" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
